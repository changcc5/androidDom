<?xml version="1.0" encoding="utf-8"?>
<resources>
 <style name="Dialog" parent="android:Theme.DeviceDefault.Dialog" />
 <style name="Dialog.Light" parent="android:Theme.DeviceDefault.Light.Dialog" />
 <!-- really have no idea why this is needed, but i get 2 sets of dialog borders otherwise -->
 <style name="Theme.DeviceDefault.Dialog.Alert" parent="Dialog">
    <item name="android:windowBackground">@android:color/transparent</item>
 </style>
 <style name="Theme.DeviceDefault.Light.Dialog.Alert" parent="Dialog.Light">
    <item name="android:windowBackground">@android:color/transparent</item>
 </style>

 <style name="Theme" parent="android:Theme.DeviceDefault" />
 <style name="Theme.Light" parent="android:Theme.DeviceDefault.Light" />
 <style name="Theme.Light.DarkDialog" parent="Theme.Light" >
     <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Dialog.Alert</item>
 </style>

 <style name="NoActionBar" parent="android:Theme.DeviceDefault.NoActionBar" />
 <style name="NoActionBar.Light" parent="android:Theme.DeviceDefault.Light.NoActionBar" />
 <style name="NoActionBar.Light.DarkDialog" parent="NoActionBar.Light" >
     <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Dialog.Alert</item>
 </style>

 <style name="AndroidME" parent="android:Theme.NoTitleBar" >
     <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Dialog.Alert</item>
 </style>
 <style name="AndroidME.Light" parent="android:Theme.Light.NoTitleBar" >
     <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Light.Dialog.Alert</item>
 </style>
 <style name="AndroidME.Light.DarkDialog" parent="AndroidME.Light" >
     <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Dialog.Alert</item>
 </style>
</resources>
